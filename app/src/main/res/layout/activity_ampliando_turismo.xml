<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotelbg"
    tools:context=".AmpliandoTurismo">



    <ImageView
        android:id="@+id/imagenAmpliandoTurismo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/s1"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"

        />
    <ImageView
        android:id="@+id/imagenAmpliandoSitiDos"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/r1"

        android:scaleType="fitXY"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="1"
        />

    <TextView
        android:id="@+id/ampliandoNameTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cataratas del niagara"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.396"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        />

    <TextView

        android:id="@+id/ampliandoPrecioTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$90.000"
        android:textSize="26dp"

        app:layout_constraintTop_toBottomOf="@+id/ampliandoNameTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/ampliandoTelTurismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="322-595-0033"
        android:textSize="26dp"

        app:layout_constraintTop_toBottomOf="@+id/ampliandoPrecioTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/ampliandoInfoTurismo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:textSize="25dp"

        app:layout_constraintTop_toBottomOf="@+id/ampliandoTelTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="500dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/ampliandoInfoTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text="Reservar"
        android:backgroundTint="@color/hoteles"
        android:fontFamily="cursive"
        android:textStyle="bold"

        />

    <ImageView
        android:id="@+id/estrellasSitio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/es1"
        app:layout_constraintTop_toBottomOf="@id/ampliandoInfoTurismo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>